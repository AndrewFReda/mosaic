<div class="modal fade" id="upload_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">

    <div class="modal-content">
      
      <%= simple_form_for @user, url: upload_path, method: 'post' do |f|  %>

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class: 'modal-title', id: 'myModalLabel'> Upload Pictures </h4>
        </div>
        
        <div class="modal-body">
          <%= f.label :composition_pictures, class: 'form-label' %>
          <%= f.file_field :compositions, multiple: true, class: 'form-control' %>

          <%= f.label :base_pictures, class: 'form-label' %>
          <%= f.file_field :bases, multiple: true, class: 'form-control last-form-input' %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
          <%= f.button :submit, 'Upload', class: 'btn btn-primary' %>
        </div>

      <% end %>

    </div>
  </div>
</div>