<div class="modal fade" id="upload_base_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <%= simple_form_for @mosaic, url: url_for(controller: :mosaics, action: :upload_base) do |f|  %>

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4> <%= f.label :base_pictures, class: 'modal-title', id: 'myModalLabel' %> </h4>
        </div>
        
        <div class="modal-body">
          <%= f.file_field :base, type: :file  %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
          <%= f.button :submit, 'Upload', class: 'btn btn-primary' %>
        </div>

      <% end %>

    </div>
  </div>
</div>