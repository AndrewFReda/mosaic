<div class="modal fade" id="choose_composition_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
  
    <div class="modal-content">
      
      <%= simple_form_for @mosaic, :html => {  multipart: true } do |f| %>

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4> <%= f.label :composition_pictures, class: 'modal-title', id: 'myModalLabel' %> </h4>
        </div>

        <div class="modal-body">
          
        <%= f.association :composition_pictures %>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
          <%= f.submit 'Choose', class: 'btn btn-primary' %>
        </div>

      <% end %>

    </div>
  </div>
</div>