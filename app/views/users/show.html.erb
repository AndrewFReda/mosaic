<h2> Profile </h2>

</br>

<div class='row'>
  <div class='col-xs-12'>
    
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#delete_modal"> Delete Pictures </button>
    
  </div>
</div>
</br>
<div class='row'>
  <div class='col-xs-12'>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#distribution_modal"> View Picture Distribution </button>

  </div>
</div>
</br>
<div class='row'>
  <div class='col-xs-12'>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#change_password_modal"> Change Password </button>

  </div>
</div>
</br>
<div class='row'>
  <div class='col-xs-12'>

    <%= link_to 'Back', new_picture_path, class: 'btn btn-danger' %>

  </div>
</div>


<!-- Delete Pictures Modal -->
<%= render 'modals/delete' %>
<!-- View Color Distribution Modal -->
<%= render 'modals/distribution' %>
<!-- Change Password Modal -->
<%= render 'modals/change_password' %>

<%= javascript_tag do %>
  window.composition_pictures = <%= raw @user.composition_pictures.to_json %>
  window.base_pictures        = <%= raw @user.base_pictures.to_json %>
  window.mosaics              = <%= raw @user.mosaics.to_json %>
<% end %>